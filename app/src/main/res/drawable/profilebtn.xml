<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transparent background with no corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7A7A7A"/> <!-- Fully transparent color -->
            <corners android:radius="0dp"/> <!-- No corners -->
        </shape>
    </item>

    <!-- Bottom line -->
    <item android:bottom="1.5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Color for the bottom line -->
        </shape>
    </item>

</layer-list>